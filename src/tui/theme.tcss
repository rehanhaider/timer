/* Shared Textual theme for time-manager TUIs
 *
 * Primary:   #081e32
 * Secondary: #d5b77c
 *
 * Note: Textual TCSS doesn't support `linear-gradient(...)` or `box-shadow`,
 * so the "glass" / glow effect is approximated with alpha backgrounds + outline.
 *
 * Linter note: Properties like `text-style`, `text-opacity`, `content-align`,
 * `layout`, and `align` are valid Textual TCSS extensions, not standard CSS.
 * These warnings can be safely ignored.
 */

Screen {
    background: #081e32;
    color: #d5b77c;
}

Header {
    background: transparent;
    color: #d5b77c;
}

Footer {
    background: transparent;
    color: #d5b77c 60%;
}

/* Footer "keycaps" */
FooterLabel {
    background: transparent;
    color: #d5b77c 60%;
}

.footer-key--key {
    background: #d5b77c 10%;
    color: #d5b77c;
    padding: 0 1;
    text-style: bold;
}

.footer-key--description {
    background: transparent;
    color: #d5b77c 60%;
}

/* Main content area */
#content {
    /* Container defaults to height: 1fr; we keep that behavior (no hard-coded heights). */
    /* Use explicit axis alignment types:
       - vertical: https://textual.textualize.io/css_types/vertical/
       - horizontal: https://textual.textualize.io/css_types/horizontal/ */
    align-vertical: middle;
    align-horizontal: center;
    padding: 1 2;
}

/* Center “card” */
#display-container {
    outline: round #d5b77c 20%;
    layout: vertical;
    align-horizontal: center;
    align-vertical: middle;
    padding: 3 10;
    margin: 1 0 2 0;
    width: auto;
    height: auto;
    /* With width:auto, use content-box so padding expands the card instead of
       shrinking the content area (prevents Digits from being clipped). */
    box-sizing: content-box;
}

/* Center each section independently so we don't need width/min-width coupling */
#card-row,
#buttons-row {
    layout: horizontal;
    height: auto;
    align-horizontal: center;
    align-vertical: middle;
}

/* Center the time + status using horizontal rows (more reliable for multi-line Digits) */
#time-row,
#hint-row,
#status-row {
    layout: horizontal;
    # width: auto;
    height: auto;
    align-vertical: middle;
    align-horizontal: center;
}

#hint-row {
    margin-top: 1;
}

#status-row {
    margin-top: 1;
}


Digits {
    color: #d5b77c;
    text-opacity: 100%;
    width: auto;
    content-align: center middle;
    text-align: center;
}

#time-display {
    width: auto;
}

Digits.muted {
    text-opacity: 70%;
}

Digits.danger {
    color: #8b3a3a;
    text-opacity: 100%;
}

#status {
    width: auto;
    text-style: italic;
    text-opacity: 70%;
    color: #d5b77c;
    content-align: center middle;
}

#status.running {
    text-opacity: 100%;
}

#status.paused,
#status.ready {
    text-opacity: 70%;
}

#status.danger {
    color: #8b3a3a;
    text-opacity: 100%;
}

/* Stopwatch time format hint */
#format-hint {
    width: auto;
    text-style: italic;
    text-opacity: 60%;
    color: #d5b77c;
    content-align: center middle;
}

/* Buttons (stopwatch only) */
#buttons {
    layout: horizontal;
    height: auto;
    width: auto;
    align-vertical: middle;
    align-horizontal: center;
    margin-top: 1;
}

Button {
    /* Flatten Textual's default "3D" button styling (which can show as internal
       border lines). See Button docs: https://textual.textualize.io/widgets/button/ */
    background: #d5b77c 15%;
    color: #d5b77c;
    border: none;
    border-top: none;
    border-bottom: none;
    line-pad: 1;
    height: auto;
    padding: 1 7;
    margin: 0 1;
}

Button:disabled {
    /* Avoid full-widget opacity: terminals blend alpha differently which can make disabled
       buttons appear to "disappear" in some emulators. */
    opacity: 100%;
    background: #d5b77c 8%;
    color: #d5b77c 45%;
    border: none;
}

/* Hover effects should be color-only (no offsets) */

Button.start {
    background: #d5b77c;
    color: #081e32;
    border: none;
    text-style: bold;
}

Button.start:hover {
    background: #d5b77c 75%;
    color: #8b3a3a;
}

Button.stop {
    background: #8b3a3a;
    color: #fffaf0;
    border: none;
    text-style: bold;
}

Button.stop:hover {
    background: #a04545 50%;
}

Button.stop:disabled {
    background: #8b3a3a 25%;
    color: #fffaf0 55%;
    border: none;
}

Button.reset {
    background: #d5b77c 15%;
    color: #d5b77c;
    border: none;
    # outline: round #d5b77c;
    text-style: bold;
}

Button.reset:hover {
    background: #d5b77c 25%;
    color: #8b3a3a;
}
